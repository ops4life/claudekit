{
  "branches": ["main", "master"],
  "ci": false,
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "NEXT_RELEASE_VERSION=${nextRelease.version} node .github/update-plugin-version.js"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", ".claude-plugin/plugin.json"],
        "message": "chore(release): version ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}",
        "labels": false
      }
    ]
  ]
}
